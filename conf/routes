
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/workflow/statuses          io.wonder.soft.example.application.workflow.controller.WorkflowController.listStatus

POST    /api/workflow/statuses          io.wonder.soft.example.application.workflow.controller.WorkflowController.createStatus

PUT     /api/workflow/statuses          io.wonder.soft.example.application.workflow.controller.WorkflowController.updateStatus

GET     /api/workflow/definitions/:id   io.wonder.soft.example.application.workflow.controller.WorkflowController.findDefinition(id: String)

GET     /api/workflow/definitions       io.wonder.soft.example.application.workflow.controller.WorkflowController.listDefinition

POST    /api/workflow/definitions       io.wonder.soft.example.application.workflow.controller.WorkflowController.createDefinition

GET     /api/workflow/transitions/:id   io.wonder.soft.example.application.workflow.controller.WorkflowController.listTransition(id: String)

POST    /api/workflow/transitions       io.wonder.soft.example.application.workflow.controller.WorkflowController.createTransition

GET     /api/workflow/tasks             io.wonder.soft.example.application.workflow.controller.TaskController.listTask

POST    /api/workflow/tasks             io.wonder.soft.example.application.workflow.controller.TaskController.createTask

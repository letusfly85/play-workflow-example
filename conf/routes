
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           io.wonder.soft.example.application.controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      io.wonder.soft.example.application.controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    io.wonder.soft.example.application.controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/workflow/statuses      io.wonder.soft.example.application.workflow.controller.WorkflowController.listStatus

POST    /api/workflow/statuses      io.wonder.soft.example.application.workflow.controller.WorkflowController.createStatus

PUT     /api/workflow/statuses      io.wonder.soft.example.application.workflow.controller.WorkflowController.updateStatus

GET     /api/workflow/schemes/:id   io.wonder.soft.example.application.workflow.controller.WorkflowController.findScheme(id: String)

GET     /api/workflow/schemes       io.wonder.soft.example.application.workflow.controller.WorkflowController.listScheme

POST    /api/workflow/schemes       io.wonder.soft.example.application.workflow.controller.WorkflowController.createScheme

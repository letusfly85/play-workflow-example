
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           io.wonder.soft.example.application.controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      io.wonder.soft.example.application.controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    io.wonder.soft.example.application.controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/workflow/statuses              io.wonder.soft.example.application.controllers.WorkflowController.statusList

GET     /api/workflow/schemes/:workflowId   io.wonder.soft.example.application.controllers.WorkflowController.findScheme(workflowId: String)
